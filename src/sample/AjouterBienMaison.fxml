                                <children>
                                    <ChoiceBox fx:id="propsChoiceBox" prefHeight="26.0" prefWidth="170.0" />
                                    <Button mnemonicParsing="false" onAction="#creerPropDialogBox" prefHeight="30.0" prefWidth="32.0">
