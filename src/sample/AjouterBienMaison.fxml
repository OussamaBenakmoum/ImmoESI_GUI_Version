                            <Label text="Details">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </Label>
                        <Label text="Matricule" />
                            <TextField fx:id="matriculeTextField" prefHeight="26.0" prefWidth="165.0" promptText="1450124" />
