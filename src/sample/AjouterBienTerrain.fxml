<AnchorPane fx:id="ajouterAppart" prefHeight="480.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.AjouterBienTerrainController">
    <children>
      <ScrollPane prefHeight="502.0" prefWidth="688.0">
