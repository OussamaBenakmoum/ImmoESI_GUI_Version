                        <TextField fx:id="nbFacadeTextField" prefHeight="26.0" prefWidth="165.0" promptText="2, 3" />
                        <ChoiceBox fx:id="typeTransactionChoiceBox1" prefHeight="26.0" prefWidth="170.0" />
                        </children>
                    </VBox>
                    <Separator layoutX="332.0" layoutY="71.0" orientation="VERTICAL" prefHeight="344.0" prefWidth="0.0" />
                    <VBox layoutX="352.0" layoutY="98.0" prefHeight="291.0" prefWidth="290.0" spacing="15.0">
                        <children>
                        <Label text="Statut Juridique">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <ChoiceBox fx:id="statutJuridiqueChoiceBox" prefHeight="26.0" prefWidth="170.0" />
                        <Label text="Prix initial">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                            <TextField fx:id="prixInitialTextField" promptText="20 000 000 (DA)" />
                        <ToggleButton fx:id="negciableToggleButton" mnemonicParsing="false" text="Negociable" />
                        <Label text="Description du bien">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                            <TextArea fx:id="descriptionTextArea" prefHeight="88.0" prefWidth="290.0" promptText="Description du bien" />
                        </children>
                    </VBox>
                    <Button layoutX="549.0" layoutY="453.0" mnemonicParsing="false" onAction="#creerBienTerrain" prefHeight="43.0" prefWidth="93.0" text="Créer" />
                    <Label layoutX="43.0" layoutY="32.0" text="Ajouter un Terrain">
                        <font>
                            <Font size="17.0" />
                        </font>
                    </Label>
                    <Separator layoutX="42.0" layoutY="58.0" prefHeight="1.0" prefWidth="181.0" />
